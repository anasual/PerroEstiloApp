<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="362dp"
                android:layout_height="match_parent"
                android:text="@string/recuperar"
                android:textColor="@color/titulos"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:paddingStart="30dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:hint="@string/forma"
                android:layout_marginTop="15dp"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ckbxRPTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/telefono"
                    android:textSize="15dp"/>
                <CheckBox
                    android:id="@+id/ckbxRPEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="15dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:hint="@string/enviar_codigo"
                android:textSize="15dp" />
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/fondo_edit_text"
                android:hint="e-mail"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivRPemail"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="7dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/persona"
                    android:translationY="-55dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtRPemail"
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/fed"
                    android:clickable="true"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:translationX="20dp" />
                 </com.google.android.material.textfield.TextInputLayout>
                 <com.google.android.material.textfield.TextInputLayout
                     android:layout_width="match_parent"
                     android:layout_height="70dp"
                     android:layout_marginTop="15dp"
                     android:layout_marginLeft="15dp"
                     android:background="@drawable/fondo_edit_text"
                     android:hint="@string/telefono"
                     android:orientation="horizontal">
                     <ImageView
                         android:id="@+id/ivRPtelefono"
                         android:layout_width="35dp"
                         android:layout_height="35dp"
                         android:layout_margin="7dp"
                         android:layout_marginLeft="15dp"
                         android:src="@drawable/persona"
                         android:translationY="-55dp" />

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/edtRPtelefono"
                         android:layout_width="290dp"
                         android:layout_height="match_parent"
                         android:layout_gravity="center"
                         android:background="@drawable/fed"
                         android:clickable="true"
                         android:textSize="20dp"
                         android:textStyle="italic"
                         android:translationX="20dp" />
                 </com.google.android.material.textfield.TextInputLayout>
                 <Button
                     android:id="@+id/btnRPEnviar"
                     android:layout_width="match_parent"
                     android:layout_gravity="center"
                     android:layout_height="40dp"
                     android:layout_marginLeft="15dp"
                     android:layout_marginTop="70dp"
                     android:background="@drawable/botones_ok"
                     android:text="@string/enviar" />
             </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>