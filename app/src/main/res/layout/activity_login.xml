        </LinearLayout>

        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>