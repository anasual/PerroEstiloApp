<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="362dp"
        android:layout_height="match_parent"
        android:text="@string/recuperar"
        android:textColor="@color/titulos"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:paddingStart="30dp"
        android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/fondo_edit_text"
        android:hint="@string/new_pass"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivNewPassword"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="7dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/password"
            android:translationY="10dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNewPassword"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/fed"
            android:clickable="true"
            android:textSize="20dp"
            android:textStyle="italic"
            android:translationX="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/fondo_edit_text"
            android:hint="@string/conf_pass"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivNewPasswordX2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="7dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/password"
                android:translationY="10dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNewPasswordX2"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/fed"
                android:clickable="true"
                android:textSize="20dp"
                android:textStyle="italic"
                android:translationX="20dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnNewPassword_Aceptar"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:background="@drawable/botones_ok"
            android:text="@string/aceptar" />
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>