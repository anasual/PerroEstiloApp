<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="362dp"
                android:layout_height="match_parent"
                android:text="@string/recuperar"
                android:textColor="@color/titulos"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:paddingStart="30dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/f_correo"
                android:layout_marginTop="35dp"
                android:textSize="17dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/fondo_edit_text"
                android:hint="@string/email"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivRPcorreo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="7dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/mail"
                    android:translationY="-55dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtRPcorreo"
                    android:layout_width="290dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/fed"
                    android:clickable="true"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:translationX="20dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:text="@string/codigo"
                android:layout_marginTop="40dp"
                android:textSize="17dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edtMailCodigo0"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="60dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <EditText
                    android:id="@+id/edtMailCodigo1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <EditText
                    android:id="@+id/edtMailCodigo2"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <EditText
                    android:id="@+id/edtMailCodigo3"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnRPMailAceptar"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:background="@drawable/botones_ok"
                android:text="@string/aceptar" />
            <Button
                android:id="@+id/btnRPMailEnviarx2"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/botones_ok"
                android:text="@string/enviarx2" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>